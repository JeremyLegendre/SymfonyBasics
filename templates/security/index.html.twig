{% extends 'base.html.twig' %}

{% block title %}Inscription jstore{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ controller_name }} </h1>

    {{ form_start(form) }}
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.username, {
                    "label": "Nom d'utilisateur",
                    "attr": {
                        "placeholder": "Batman"
                    }
                }) }}
            </div>
            <div class="col-md-4">
              {{ form_row(form.firstname, {
                    "label": "Votre prénom",
                    "attr": {
                        "placeholder": "Jérémy"
                    }
                })  }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.lastname, {
                    "label": "Votre nom",
                    "attr": {
                        "placeholder": "Dupont"
                    }
                }) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                {{ form_row(form.email, {
                    "label": "Votre email",
                    "attr": {
                        "placeholder": "jeremy.dupond@machin.truc"
                    }
                }) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.password, {
                    "label": "Votre mot de passe",
                    "attr": {
                        "placeholder": "Dupont"
                    }
                }) }}
            </div>
            <div class="col-md-12">
                {{ form_row(form.passwordConfirm, {
                    "label": "Confirmer votre mot de passe",
                    "attr": {
                        "placeholder": "Dupont"
                    }
                }) }}
            </div>
        </div>
        <button type="submit" class="btn btn-success">S'inscrire</button>
    {{ form_end(form) }}

</div>
{% endblock %}
