{% extends "base.html.twig" %}

{% block title %} Accueil {% endblock %}

{% block body %}
    <h1 class="text-center">Bienvenue sur la page d'Accueil</h1>
    <div class="row">
        <div class="col-md-8">
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-4 mb-3">
                        <img height="190px" class="card-img-top" src="/assets/blog/images/{{ article.image }}" alt="{{ article.title }}">
                        <div class="card-body">
                            <h5 class="card-title"> {{ article.title }} </h5>
                            <a href="{{ path('show', {'id':article.id}) }}" class="btn btn-primary">En savoir plus</a>
                        </div>
                        <div class="card-footer">
                            <p class="date">Écrit le {{ article.createdAt | date("d/m/Y") }} à {{ article.createdAt | date("H:i") }} par <span class="author"> {{ article.author }} </span></p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="col-md-4" >
            <ul class="list-group">
                <h2>Categories</h2>
                {% for category in categories %}
                    <li class="list-group-item d-flex flex-row justify-content-between">
                        <a class="mr-1" href="{{ path('show_article', {'id': category.id}) }}">{{ category.title }}</a>
                        <span class="badge bg-primary">{{ category.articles|length }} article(s)</span>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}